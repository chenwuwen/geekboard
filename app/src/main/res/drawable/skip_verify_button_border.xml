<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
            <!--内部填充，也就是边框内的填充色-->
            <solid android:color="#23A0FF" />

            <!--这里是设置边框线的粗细和颜色-->
            <stroke
                android:width="3dp"
                android:color="#23A0FF" />


            <!--圆角的话，里边有参数可以单独设置,如果要圆形边框，那么此处设置的值为被修饰组件长宽的一半,也就是说呗修饰的组件应该是正方形-->
            <corners android:radius="30dp" />

            <!--大小-->
            <size
                android:width="10dp"
                android:height="10dp" />

            <!--渐变色-->
            <!--<gradient-->
            <!--android:angle="90"-->
            <!--android:endColor="#aa66cc"-->
            <!--android:startColor="#9933cc" />-->

            <!--内边距-->
            <padding
                android:bottom="5dp"
                android:left="10dp"
                android:right="10dp"
                android:top="5dp" />
        </shape>
    </item>
</layer-list>