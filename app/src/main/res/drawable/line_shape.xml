<?xml version="1.0" encoding="utf-8"?>

<!--分割线-->
<!--https://blog.csdn.net/bingshushu/article/details/45818729-->

<!--shape用于定义形状，有四种形状(矩形rectangle| 椭圆oval | 直线line | 圆形ring)-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="line">

    <solid android:color="#494949" />
    <!--这个size表示这条线占多少高度-->
    <size android:height="8dp" />


    <!--这里是设置边框线的粗细和颜色,这个width表示能看到的框线的宽度-->
    <stroke
        android:width="1dp"
        android:color="#494949" />



    <!--圆角的话，里边有参数可以单独设置-->
    <corners android:radius="0dp" />

</shape>