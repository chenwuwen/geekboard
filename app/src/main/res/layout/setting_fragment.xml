<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/setting"
    android:orientation="horizontal">

    <Button
        android:id="@+id/change_button"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:onClick="changeButton"
        android:text="更改键盘"
        android:visibility="visible" />

    <EditText
        android:hint="重新打开键盘查看是否更改"
        android:id="@+id/hint_text"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent" />

    <CheckBox
        android:checked="false"
        android:id="@+id/check_no_arrow"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:onClick="arrowToggle"
        android:text="用剪切、复制、粘贴的快捷方式,来替换箭头" />

    <CheckBox
        android:checked="false"
        android:id="@+id/check_preview"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:onClick="previewToggle"
        android:text="按键气泡" />

    <CheckBox
        android:checked="true"
        android:id="@+id/check_sound"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:onClick="soundToggle"
        android:text="按键声音" />

    <CheckBox
        android:checked="true"
        android:id="@+id/check_vibrator"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:onClick="vibratorToggle"
        android:text="按键振动" />

    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:text="键盘尺寸"
        android:textSize="20sp" />

    <SeekBar
        android:id="@+id/size_seekbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:max="3"
        android:onClick="closeKeyboard"
        android:progress="2" />

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/smallest"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="小" />


        <TextView
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="大" />

    </RelativeLayout>


    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"

        android:text="布局"
        android:textSize="20sp" />


    <RadioGroup
        android:id="@+id/radiogrouplayout"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content">

        <RadioButton
            android:id="@+id/qwertylayout"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:onClick="closeKeyboard"
            android:text="Qwerty"

            />

        <RadioButton
            android:checked="false"
            android:id="@+id/azertylayout"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:onClick="closeKeyboard"
            android:text="Azerty" />


    </RadioGroup>

    <Button
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:onClick="openTutorial"
        android:text="使用教程" />


    <Button
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:onClick="openUserHome"
        android:text="个人主页" />


    <Button
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:layout_width="match_parent"
        android:onClick="feedback"
        android:text="意见与反馈" />

</LinearLayout>